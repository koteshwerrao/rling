<%= form_for :view_condition,:url=>view_view_conditions_path(@page) do |f| %>

  <% if @view_condition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@view_condition.errors.count, "error") %> prohibited this view_condition from being saved:</h2>

      <ul>
      <% @view_condition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <% unless @page.view_conditions.empty? || @page.view_conditions.first.id==@view_condition.id %>
    <%= f.label :relation_with_previous %><br />
    <%= f.select :relation_with , ["and","or"] %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.select :name , @page.not_added_condition_components.collect{|c| c } %>
  </div>
 <div class="field">
    <%= f.label :operator %><br />
    <%= f.select :operator ,["=" ,"<" ,">" ,"<=" ,">=","!=","LIKE"] %>
  </div>
  <div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>
 <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
