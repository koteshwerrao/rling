 <% end %>
    <div>
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
  </div>

   
   <div>
    <%= f.label :is_linked %>
    <%= f.check_box :is_linked %>
  </div>


  <div class="actions">
    <%= f.submit(@view_component.id.nil? ? "Add" : "Update") %>
  </div>

<% end %>
