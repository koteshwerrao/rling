<%= form_for :view_component,:url=>view_view_components_path(@page) do |f| %>
  <% if @view_component.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@view_component.errors.count, "error") %> prohibited this view_component from being saved:</h2>

      <ul>
      <% @view_component.errors.full_messages.each do |msg| %>
