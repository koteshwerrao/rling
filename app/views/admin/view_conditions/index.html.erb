<h1>Listing View Conditions</h1>
<% unless @view_conditions.empty? %>
<table>
  <tr>
    <th>Relation with Previous condition</th>
    <th>Name</th>
     <th>Operator</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @view_conditions.each do |view_condition| %>
  <tr>
    <td><%= view_condition.relation_with %></td>
    <td><%= view_condition.name %></td>
    <td><%= view_condition.operator %></td>
    <td><%= view_condition.value %></td>
    <td><%= link_to 'Edit', edit_view_view_condition_path(@page,view_condition) %></td>
    <td><%= link_to 'Destroy', view_view_condition_path(@page,view_condition), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
<%= 'No view conditions. Create one now' %>
<% end %>
